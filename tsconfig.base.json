{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@storybook-demo/admin/feature-delivery-scheduler": [
        "libs/admin/feature-delivery-scheduler/src/index.ts"
      ],
      "@storybook-demo/admin/feature-manage-orders": [
        "libs/admin/feature-manage-orders/src/index.ts"
      ],
      "@storybook-demo/common/data-access-graphql": [
        "libs/common/data-access-graphql/src/index.ts"
      ],
      "@storybook-demo/common/ui-form": ["libs/common/ui-form/src/index.ts"],
      "@storybook-demo/common/ui-image-radio-buttons": [
        "libs/common/ui-image-radio-buttons/src/index.ts"
      ],
      "@storybook-demo/common/ui-input": ["libs/common/ui-input/src/index.ts"],
      "@storybook-demo/common/ui-multi-select": [
        "libs/common/ui-multi-select/src/index.ts"
      ],
      "@storybook-demo/common/ui-progress-meter": [
        "libs/common/ui-progress-meter/src/index.ts"
      ],
      "@storybook-demo/pizza-store/feature-payment-gateway": [
        "libs/pizza-store/feature-payment-gateway/src/index.ts"
      ],
      "@storybook-demo/pizza-store/ui-pizza-image": [
        "libs/pizza-store/ui-pizza-image/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
